{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceRoot}/src/TheRetailStoreDiscounts.ConsoleApp/TheRetailStoreDiscounts.ConsoleApp.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceRoot}/test/TheRetailStoreDiscounts.Tests/TheRetailStoreDiscounts.Tests.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group":{
            "kind": "test",
            "isDefault": true
            }
        }
    ]
}